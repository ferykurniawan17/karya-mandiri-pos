{
  "name": "pos-karya-mandiri",
  "version": "1.0.0",
  "description": "POS Desktop App untuk Bahan Bangunan",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "tsc -p electron/tsconfig.json && electron electron/dist/main.js",
    "electron:dev": "concurrently \"yarn dev\" \"wait-on http://localhost:3000 && yarn electron\"",
    "electron:build": "yarn build && prisma generate && tsc -p electron/tsconfig.json && electron-builder",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:init": "tsx scripts/init-db.ts",
    "db:template": "tsx scripts/create-db-template.ts",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "pos",
    "electron",
    "nextjs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.pos.karyamandiri",
    "productName": "POS Karya Mandiri",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/dist/**/*",
      ".next/**/*",
      "node_modules/**/*",
      "public/**/*",
      "prisma/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "prisma/schema.prisma",
        "to": "prisma/schema.prisma"
      },
      {
        "from": "prisma/pos-template.db",
        "to": "prisma/pos-template.db",
        "filter": [
          "prisma/pos-template.db"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
